<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Bundle Information -->
    <key>CFBundleName</key>
    <string>RoomScanningApp</string>
    <key>CFBundleIdentifier</key>
    <string>com.yourcompany.roomscanningapp</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>
    
    <!-- Launch Screen Configuration -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    
    <!-- Device Family -->
    <key>UIDeviceFamily</key>
    <array>
        <integer>1</integer>
        <integer>2</integer>
    </array>
    
    <!-- Privacy Settings -->
    <key>NSCameraUsageDescription</key>
    <string>This app requires camera access to scan your room and overlay digital furniture.</string>
    
    <!-- Additional keys can be added here as needed -->
</dict>
</plist> 